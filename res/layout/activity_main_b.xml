<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<EditText
        android:id="@+id/streetEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Street Address"
        android:inputType="textPostalAddress" 
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/streetEditText"
        android:ems="10"
        android:hint="City"
        android:inputType="textPostalAddress"
        android:visibility="invisible" />
    

    <EditText
        android:id="@+id/stateEditText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cityEditText"
        android:layout_alignBottom="@+id/cityEditText"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="State"
        android:inputType="textPostalAddress"
        android:visibility="invisible" />

    <Button
        android:id="@+id/submitGeoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cityEditText"
        android:layout_below="@+id/cityEditText"
        android:layout_marginTop="32dp"
        android:text="Submit"
        android:visibility="invisible" />
</RelativeLayout>
